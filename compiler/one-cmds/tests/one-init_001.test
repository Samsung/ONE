filename_ext="$(basename -- $0)"
filename="${filename_ext%.*}"

trap_err_onexit()
{
  echo "${filename_ext} FAILED"
  exit 255
}

trap trap_err_onexit ERR

cfgname="test.cfg"
template="$(dirname $(realpath $0))/../onecc.template.cfg"

rm -rf ${cfgname}

# run test
one-init ${cfgname} > /dev/null 2>&1

if [[ ! -f "${cfgname}" ]]; then
  trap_err_onexit
fi

diff ${cfgname} ${template}
ret=$(echo $?)
if [[ $ret -ne 0 ]]; then
  trap_err_onexit
fi

rm -rf ${cfgname}

echo "${filename_ext} SUCCESS"
