# one-import-tf -> one-optimize

filename_ext="$(basename -- $0)"
filename="${filename_ext%.*}"

trap_err_onexit()
{
  echo "${filename_ext} FAILED"
  exit 255
}

trap trap_err_onexit ERR

# produce 'lite-model_esrgan-tf2_1.circle' as partition source
circlefile="faster_rcnn_openimages_v4_inception_resnet_v2_1.circle"
filename="partition_faster_rcnn"
configfile="${filename}.cfg"

if [[ ! -s "${circlefile}" ]]; then
  # run conversion
  one-build -C ${configfile} > /dev/null
fi

if [[ ! -s "${circlefile}" ]]; then
  trap_err_onexit
fi

# run partition
partfile="${filename}.part"
workfolder="${filename}.work"

mkdir -p ${workfolder}
cp ${circlefile} ${workfolder}
cp ${partfile} ${workfolder}
circle_partitioner ${partfile} ${circlefile} ${workfolder}

echo "${filename_ext} SUCCESS"
